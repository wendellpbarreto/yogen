<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-12 col-md-10">
    <h2><%= plural_table_name.humanize %></h2>
    <ol class="breadcrumb">
      <li><%%= link_to t('<%= plural_table_name.humanize %>'), <%= index_helper %>_path %></li>
      <li class="active"><strong><%%= t('Edit') %></strong></li>
    </ol>
  </div>
  <div class="col-sm-12 col-md-2">

  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%%= t('View') %> <%= singular_table_name %> <% if attributes.any?{|attribute| attribute.name == 'name'} %><%%= @<%= singular_table_name %>.name %><% else %><%%= @<%= singular_table_name %>.id %><% end %><small></small></h5>
        <div class="ibox-tools">
          <div class="pull-right">
            <%%= link_to '<i class="fa fa-reply"></i>'.html_safe, <%= index_helper %>_path %>
          </div>
        </div>
      </div>
      <div class="ibox-content">
        <% attributes.reject(&:password_digest?).each do |attribute| -%>
        <div class="row">
          <label class="control-label col-sm-2"><%= attribute.human_name %></label>
          <div class="col-sm-10">
          <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
          </div>
        </div>
        <% end -%>
        <div class="hr-line-dashed"></div>
        <div class="row clearfix">
          <div class="col-sm-10 col-sm-offset-2">
            <%%= link_to( t('Back'), <%= index_helper %>_path, class: 'btn btn-white' ) %>
            <%%= link_to t('Edit'), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>